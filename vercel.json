{
    "builds": [
        {
            "src": "website/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        }
    ],
    "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
    "routes": [
        {
            "src": "/(.*)",
            "dest": "website/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "manage.py"
        }
    ]
}